using System;
using System.Collections.Generic;
using System.Linq;

public class ShoppingCartSummary
{
    public static void Main(string[] args)
    {
        List<decimal> prices = new List<decimal>();
        decimal input;

        // Get item prices from the user until -1 is entered.
        Console.WriteLine("Enter item prices (enter -1 to finish):");
        do
        {
            while (!decimal.TryParse(Console.ReadLine(), out input) || (input != -1 && input < 0))
            {
                Console.WriteLine("Invalid input. Please enter a non-negative number or -1 to finish.");
            }
            if (input != -1)
            {
                prices.Add(input);
            }
        } while (input != -1);

        // Display shopping cart summary.
        DisplaySummary(prices);
    }

    static void DisplaySummary(List<decimal> prices)
    {
        if (prices.Count == 0)
        {
            Console.WriteLine("Shopping cart is empty.");
            return;
        }

        Console.WriteLine("\nShopping Cart Summary:");
        Console.WriteLine($"Total Items: {prices.Count}");
        Console.WriteLine($"Average Price: {prices.Average():C}"); // Format as currency.
        Console.WriteLine($"Highest Price: {prices.Max():C}");     // Format as currency.
        Console.WriteLine($"Lowest Price: {prices.Min():C}");      // Format as currency.
    }
}