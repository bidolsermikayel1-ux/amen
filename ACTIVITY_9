using System;
using System.Collections.Generic;

public class CapitalizeNames
{
    public static void Main(string[] args)
    {
        List<string> names = new List<string>();

        // Get 6 full names from the user.
        for (int i = 0; i < 6; i++)
        {
            Console.Write($"Enter full name {i + 1}: ");
            names.Add(Console.ReadLine());
        }

        // Format names to title case and display the results.
        List<string> formattedNames = FormatNames(names);
        DisplayFormattedNames(formattedNames);
    }

    // Function to format names to title case.
    static List<string> FormatNames(List<string> names)
    {
        List<string> formattedNames = new List<string>();
        foreach (string name in names)
        {
            string[] parts = name.Split(' '); // Split the name into parts.
            string formattedName = "";
            foreach (string part in parts)
            {
                if (part.Length > 0)
                {
                    formattedName += char.ToUpper(part[0]) + part.Substring(1).ToLower() + " "; // Capitalize the first letter and lowercase the rest.
                }
            }
            formattedNames.Add(formattedName.Trim()); // Remove trailing space.
        }
        return formattedNames;
    }

    // Function to display formatted names.
    static void DisplayFormattedNames(List<string> formattedNames)
    {
        Console.WriteLine("\nFormatted Names:");
        foreach (string name in formattedNames)
        {
            Console.WriteLine(name);
        }
    }
}