using System;
using System.Collections.Generic;

public class EvenOddOrganizer
{
    public static void Main(string[] args)
    {
        List<int> numbers = new List<int>();
        List<int> evenNumbers = new List<int>();
        List<int> oddNumbers = new List<int>();

        // Get 12 numbers from the user with input validation.
        for (int i = 0; i < 12; i++)
        {
            Console.Write($"Enter number {i + 1}: ");
            while (!int.TryParse(Console.ReadLine(), out int num))
            {
                Console.WriteLine("Invalid input. Please enter a valid integer.");
            }
            numbers.Add(num);
        }

        // Separate numbers into even and odd lists.
        SeparateEvenOdd(numbers, evenNumbers, oddNumbers);

        // Display the lists.
        DisplayLists(evenNumbers, oddNumbers);
    }

    // Function to separate numbers into even and odd lists.
    static void SeparateEvenOdd(List<int> numbers, List<int> evenNumbers, List<int> oddNumbers)
    {
        foreach (int num in numbers)
        {
            if (num % 2 == 0)
            {
                evenNumbers.Add(num);
            }
            else
            {
                oddNumbers.Add(num);
            }
        }
    }

    // Function to display the even and odd lists.
    static void DisplayLists(List<int> evenNumbers, List<int> oddNumbers)
    {
        Console.WriteLine("\nEven Numbers:");
        if (evenNumbers.Count == 0)
        {
            Console.WriteLine("No even numbers found.");
        }
        else
        {
            foreach (int num in evenNumbers)
            {
                Console.Write(num + " ");
            }
            Console.WriteLine(); // Add a newline after printing even numbers.
        }


        Console.WriteLine("\nOdd Numbers:");
        if (oddNumbers.Count == 0)
        {
            Console.WriteLine("No odd numbers found.");
        }
        else
        {
            foreach (int num in oddNumbers)
            {
                Console.Write(num + " ");
            }
            Console.WriteLine(); // Add a newline after printing odd numbers.
        }
    }
}