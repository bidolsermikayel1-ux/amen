using System;
using System.Collections.Generic;
using System.Linq;

public class AttendanceRecorder
{
    public static void Main(string[] args)
    {
        List<string> studentNames = new List<string>();
        string input;

        // Get student names from the user until "done" is entered.
        Console.WriteLine("Enter student names (type 'done' to finish):");
        do
        {
            input = Console.ReadLine();
            if (input.ToLower() != "done")
            {
                studentNames.Add(input);
            }
        } while (input.ToLower() != "done");

        // Display names in uppercase and count names starting with 'A'.
        DisplayNamesAndCount(studentNames);
    }

    static void DisplayNamesAndCount(List<string> names)
    {
        Console.WriteLine("\nStudent Names (Uppercase):");
        foreach (string name in names)
        {
            Console.WriteLine(name.ToUpper());
        }

        int countA = names.Count(name => name.ToUpper().StartsWith("A"));
        Console.WriteLine($"\nNumber of names starting with 'A': {countA}");
    }
}