using System;
using System.Collections.Generic;
using System.Linq;

public class RandomNumberFilter
{
    public static void Main(string[] args)
    {
        List<int> numbers = new List<int>();

        // Get 10 numbers from the user with input validation.
        for (int i = 0; i < 10; i++)
        {
            Console.Write($"Enter number {i + 1}: ");
            while (!int.TryParse(Console.ReadLine(), out int num))
            {
                Console.WriteLine("Invalid input. Please enter a valid integer.");
            }
            numbers.Add(num);
        }

        // Filter numbers greater than 50 using LINQ.
        List<int> filteredNumbers = numbers.Where(num => num > 50).ToList();

        // Display results.
        DisplayCounts(numbers, filteredNumbers);
    }

    static void DisplayCounts(List<int> originalNumbers, List<int> filteredNumbers)
    {
        Console.WriteLine($"\nOriginal Number Count: {originalNumbers.Count}");
        Console.WriteLine($"Filtered Number Count (numbers > 50): {filteredNumbers.Count}");
    }
}